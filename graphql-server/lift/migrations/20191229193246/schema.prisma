datasource db {
    provider = "postgresql"
    url = "***"
}

model staffs {
    id         String   @default(cuid()) @id
    name       String
    age        Int
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}

model attends {
    id              String   @default(cuid()) @id
    staff_id        String
    in_time         DateTime
    out_time        DateTime
    is_attend       Boolean
    date_start_time DateTime
    created_at      DateTime @default(now())
    updated_at      DateTime @updatedAt
}

model admins {
    id       String @default(cuid()) @id
    email    String @unique
    password String @unique
}

